<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        #nav {
            transition: background-color 0.3s ease;
            background-color: transparent; 
            backdrop-filter: blur(10px); 
            position: sticky;
            top: 0;
            z-index: 1000; 
        }
        .bg-transparent {
            background-color: transparent; 
        }
        .bg-blue-500 {
            background-color: skyblue; 
        }
    </style>
</head>
<body class="overflow-x-hidden">

    <!-- Navbar and Page 1 (wrapped in one container) -->
    <div id="page1-container" class="w-full min-h-screen bg-cover bg-center" style="background-image: url('https://img.freepik.com/premium-photo/medical-stethoscope-pills-red-heart-blue-background-many-different-medical-objects-light-background-top-view-ai-generated_538213-9245.jpg?w=740');">
        <div id="nav" class="shadow-sm w-full flex items-center border-none justify-between px-20 py-3">
            <h1 class="text-5xl cursor-pointer">Mediclaim</h1>
            <div id="part2" class="flex items-center gap-20">
                <h4 class="text-2xl font-bold cursor-pointer hover:border-b-2 border-black">Home</h4>
                <h4 class="text-2xl font-bold cursor-pointer hover:border-b-2 border-black">Services</h4>
                <h4 class="text-2xl font-bold cursor-pointer hover:border-b-2 border-black">About Us</h4>
                <h4 class="text-2xl font-bold cursor-pointer hover:border-b-2 border-black">Contact Us</h4>
                <i class="ri-menu-fill text-5xl"></i>
            </div>
        </div>

        <!-- Form Section aligned to the right and made larger -->
        <div class="flex items-center px-20 min-h-screen border-solid text-grey-500">
            <div class="bg-transparent-900 bg-opacity-90 w-1/3 p-10 rounded-md mr-10">
                <h3 class="text-4xl font-bold mb-5 text-zinc-900">Create Account</h3>
                <form action="/register" method="post">
                    <input
                        class="w-full px-5 py-3 outline-none bg-transparent border-2 border-zinc-800 rounded-md mb-4 text-lg text-grey-500"
                        type="text"
                        placeholder="Username"
                        name="username"
                    />
                    <input
                        class="w-full px-5 py-3 outline-none bg-transparent border-2 border-zinc-800 rounded-md mb-4 text-lg text-grey-500"
                        type="text"
                        placeholder="Name"
                        name="name"
                    />
                    <input
                        class="w-full px-5 py-3 outline-none bg-transparent border-2 border-zinc-800 rounded-md mb-4 text-lg text-grey-500"
                        type="number"
                        placeholder="Age"
                        name="age"
                    />
                    <input
                        class="w-full px-5 py-3 outline-none bg-transparent border-2 border-zinc-800 rounded-md mb-4 text-lg text-grey-500"
                        type="email"
                        placeholder="Email"
                        name="email"
                    />
                    <input
                        class="w-full px-5 py-3 outline-none bg-transparent border-2 border-zinc-800 rounded-md mb-4 text-lg text-grey-500"
                        type="password"
                        placeholder="Password"
                        name="password"
                    />
                    <input
                        class="w-full px-5 py-3 bg-green-900 text-white rounded-md cursor-pointer text-lg hover:bg-green-700"
                        type="submit"
                        value="Create Account"
                    />
                </form>
            </div>
        </div>
    </div>

    <script>
        window.onscroll = function() {
            const nav = document.getElementById('nav');
            if (window.scrollY > 10) {
                nav.classList.add('bg-blue-500');
                nav.classList.remove('bg-transparent');
            } else {
                nav.classList.remove('bg-blue-500');
                nav.classList.add('bg-transparent');
            }
        };
    </script>
</body>
</html>
