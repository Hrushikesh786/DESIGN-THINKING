    <script>
        window.onscroll = function() {
            const nav = document.getElementById('nav');
            if (window.scrollY > 10) {
                nav.classList.add('bg-blue-500');
                nav.classList.remove('bg-transparent');
            } else {
                nav.classList.remove('bg-blue-500');
                nav.classList.add('bg-transparent');
            }
        };

        document.getElementById("incomeForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Prevent form from submitting the traditional way
            const incomeValue = document.getElementById("income").value;
            const resultText = document.getElementById("result");

            if (incomeValue === "less_than_500k") {
                resultText.innerHTML = "You selected an income less than 500,000:<br>1] Panjabrao Deshmukh Policy<br>2] Cristiano Ronaldo Policy";
            } else if (incomeValue === "less_than_1200k") {
                resultText.innerText = "You selected an income less than 1,200,000.";
            } else if (incomeValue === "greater_than_500k") {
                resultText.innerText = "You selected an income greater than 500,000.";
            } else {
                resultText.innerText = "Please select a valid income range.";
            }
        });

        // Get started click
        const buttons = document.querySelectorAll("#getStartedBtn, #anotherButton");

        buttons.forEach(button => {
            button.addEventListener("click", function() {
                fetch("/check-login")
                    .then(response => {
                        if (!response.ok) {
                            return response.json().then(data => {
                                alert(data.message); // Show the alert message from the server
                            });
                        }
                        window.location.href = "/profile";
                    })
                    .catch(error => {
                        console.error("Error:", error);
                    });
            });
        });
